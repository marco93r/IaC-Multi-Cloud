{
  "cloud_provider": "azure",
  "region": {
    "azure": "westeurope"
  },
  "ssh_key": "~/.ssh/id_rsa.pub",
  "vm_count": {
    "azure": {
      "management": 1,
      "k8s_master": 1,
      "k8s_worker": 1,
      "storage": 1,
      "monitoring": 1
    }
  },
  "instance_type": {
    "azure": {
      "management": "Standard_B1s",
      "k8s_master": "Standard_B2s",
      "k8s_worker": "Standard_B2ms",
      "storage": "Standard_B2s",
      "monitoring": "Standard_B1ms"
    }
  },
  "extra_disks": {
    "azure": [
      {
        "name": "data-1",
        "size": 20,
        "type": "Standard_LRS"
      },
      {
        "name": "data-2",
        "size": 20,
        "type": "Standard_LRS"
      }
    ]
  }
}