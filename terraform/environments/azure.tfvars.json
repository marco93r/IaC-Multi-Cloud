{
  "cloud_provider": "azure",
  "region": {
    "azure": "westeurope"
  },
  "ssh_key": "~/.ssh/id_rsa.pub",
  "ssh_key_path": "/home/adminuser/.ssh/id_rsa",
  "vm_count": {
    "azure": {
      "management": 1,
      "k8s_master": 1,
      "k8s_worker": 1,
      "storage": 1,
      "monitoring": 1
    }
  },
  "instance_type": {
    "azure": {
      "management": "Standard_B1ms",
      "k8s_master": "Standard_B2s",
      "k8s_worker": "Standard_B2s",
      "storage": "Standard_B2s",
      "monitoring": "Standard_B1s"
    }
  },
  "extra_disks": {
    "azure": [
      {
        "name": "disk1",
        "size": 20,
        "type": "Standard_LRS"
      },
      {
        "name": "disk2",
        "size": 20,
        "type": "Standard_LRS"
      }
    ]
  }
}