{
  "cloud_provider": "aws",
  "region": {
    "aws": "eu-central-1"
  },
  "ssh_key": "id_rsa_aws",
  "ssh_key_path": "/home/adminuser/.ssh/id_rsa_aws",
  "vm_count": {
    "aws": {
      "management": 1,
      "k8s_master": 1,
      "k8s_worker": 1,
      "storage": 1,
      "monitoring": 1
    }
  },
  "instance_type": {
    "aws": {
      "management": "t2.micro",
      "k8s_master": "t2.medium",
      "k8s_worker": "t2.medium",
      "storage": "t2.micro",
      "monitoring": "t2.micro"
    }
  },
  "extra_disks": {
    "aws": [
      {
        "name": "disk1",
        "size": 20,
        "type": "gp2"
      },
      {
        "name": "disk2",
        "size": 20,
        "type": "gp2"
      }
    ]
  }
}